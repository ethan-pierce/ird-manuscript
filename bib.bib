@article{broeke_partitioning_2009,
	title = {Partitioning {Recent} {Greenland} {Mass} {Loss}},
	volume = {326},
	copyright = {Copyright © 2009, American Association for the Advancement of Science},
	issn = {0036-8075, 1095-9203},
	url = {https://science.sciencemag.org/content/326/5955/984},
