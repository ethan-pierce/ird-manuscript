	number = {C12},
	urldate = {2024-10-09},
	journal = {Journal of Geophysical Research: Oceans},
	author = {Gow, A. J. and Meese, D. A. and Alley, R. B. and Fitzpatrick, J. J. and Anandakrishnan, S. and Woods, G. A. and Elder, B. C.},
