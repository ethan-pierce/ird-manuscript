	journal = {Earth's Future},
	author = {Marzeion, Ben and Hock, Regine and Anderson, Brian and Bliss, Andrew and Champollion, Nicolas and Fujita, Koji and Huss, Matthias and Immerzeel, Walter W. and Kraaijenbrink, Philip and Malles, Jan-Hendrik and Maussion, Fabien and Radić, Valentina and Rounce, David R. and Sakai, Akiko and Shannon, Sarah and van de Wal, Roderik and Zekollari, Harry},
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2019EF001470},
	keywords = {glacier, modeling, projections, sea level rise, uncertainties},
	pages = {e2019EF001470},
